{
  "name": "mixed-ssr-spa-app",
  "version": "1.0.0-beta.1",
  "scripts": {
    "choose with or without server": "remove server scripts if you do not need a server and use dev instead, remove dev if you need a server",
    "dev": "vite",
    "server": "ts-node --esm ./server/index.ts",
    "server:watch": "nodemon server -e ts,json --exec \"npm run server\"",
    "build": "vite build --outDir dist",
    "buildDev": "vite build -m development",
    "preview": "vite preview --outDir dist",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "@sodraskog/unity": "^4.0.1",
    "@vitejs/plugin-vue": "^4.2.1",
    "@vue/compiler-sfc": "3.3.4",
    "@vue/server-renderer": "3.3.4",
    "@vuelidate/core": "^2.0.2",
    "@vuelidate/validators": "^2.0.2",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "lazysizes": "^5.3.2",
    "pinia": "^2.1.0",
    "sirv": "^2.0.3",
    "vite-plugin-ssr": "0.4.131",
    "vue": "^3.3.4",
    "vue-i18n": "^9.2.2"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@small-tech/https": "^5.2.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/jquery": "^3.5.16",
    "@types/node": "^20.2.5",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.34.0",
    "eslint-plugin-vue": "^9.9.0",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5",
    "vite": "^4.3.5",
    "vite-plugin-mkcert": "^1.15.0",
    "vue-tsc": "^1.6.24"
  },
  "engines": {
    "node": "^18.16.0"
  },
  "type": "module"
}
