{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "isolatedModules": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "importsNotUsedAsValues": "remove",
    "lib": [
      "es2021",
      "dom",
      "WebWorker"
    ],
    "types": [ "node" ]
  },
  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
